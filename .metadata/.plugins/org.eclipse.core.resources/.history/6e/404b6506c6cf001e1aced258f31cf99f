package Bista;

import java.awt.EventQueue;

import javax.swing.JFrame;
import javax.swing.JPanel;
import javax.swing.border.EmptyBorder;

import Modeloa.*;
import Kontroladorea.*;

import javax.swing.DefaultComboBoxModel;
import javax.swing.JButton;
import javax.swing.JLabel;
import java.awt.Font;
import java.awt.BorderLayout;
import java.awt.GridLayout;
import javax.swing.JComboBox;
import java.awt.event.ActionListener;
import java.awt.event.ActionEvent;

public class Zinemak extends JFrame {
	
	private String aukeratutakoZinema;
	private JPanel contentPane;
	
	public Zinemak(Api api) {
		
		
		setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		setBounds(100, 100, 450, 300);
		contentPane = new JPanel();
		contentPane.setBorder(new EmptyBorder(5, 5, 5, 5));

		setContentPane(contentPane);
		contentPane.setLayout(new GridLayout(0, 1, 0, 0));
		
		JPanel panel = new JPanel();
		contentPane.add(panel);
		panel.setLayout(new BorderLayout(0, 0));
		
		JComboBox cboZinemak = new JComboBox();
		cboZinemak.setToolTipText("Jarraitu");
		panel.add(cboZinemak, BorderLayout.CENTER);
		
		for(int i = 0;i<api.zinemaBete().size();i++) {
			cboZinemak.addItem(api.zinemaBete().get(i).getIzena());
		}
		
		
		JLabel lblZinemaAukeratu = new JLabel("Aukeratu Zinema:");
		lblZinemaAukeratu.setFont(new Font("Tahoma", Font.PLAIN, 33));
		panel.add(lblZinemaAukeratu, BorderLayout.NORTH);
		
		JButton btnJarraitu = new JButton("JARRAITU");
		btnJarraitu.addActionListener(new ActionListener() {
			public void actionPerformed(ActionEvent e) {
				
				aukeratutakoZinema = (String) cboZinemak.getSelectedItem();
				
				System.out.println(aukeratutakoZinema);
			}
			
		});
		panel.add(btnJarraitu, BorderLayout.SOUTH);
		
		
		
		
		
		
		
		 
	}
}
